{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-fdiagnostics-color=always",
        "-g",
        "\"${file}\"",
        "-o",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run C++ executable",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe < input.txt > output.txt\""
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Build and Run",
      "dependsOn": ["Build C++ file", "Run C++ executable"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
  